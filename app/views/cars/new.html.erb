<h1>Add a Car</h1>

<%= form_for @car do |f| %>

  <% if @car.errors.any? %>
    <h3><%= pluralize(@car.errors.count, "error") %> prohibited this manufacturer from being added:</h3>
    <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  <% end %>

  <p>
    <%= f.label :manufacturer %>
    <%= f.collection_select(:manufacturer_id, Manufacturer.all, :id, :name) %>
  </p>

  <p>
    <%= f.label :color %>
    <%= f.text_field :color %>
  </p>

  <p>
    <%= f.label :year %>
    <%= f.text_field :year %>
  </p>

  <p>
    <%= f.label :mileage %>
    <%= f.text_field :mileage %>
  </p>

  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit 'Add Car' %>
  </p>

<% end %>

<%= link_to 'Back to Cars', cars_path %>
